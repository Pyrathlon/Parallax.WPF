<Base:ParallaxContainer x:Class="Parallax.WPF.Controls.MouseAwareParallaxContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parallax.WPF.Controls"
             xmlns:Base="clr-namespace:Parallax.WPF.Controls.Base"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>
        <Grid Name="ScreenGrid">
            <ItemsControl ItemsSource="{Binding Layers, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Base:ParallaxContainer}}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid ClipToBounds="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Grid>
</Base:ParallaxContainer>
